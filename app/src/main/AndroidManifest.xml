<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudeducate.redtick">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationWrapper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Manage_Attendance"
            android:label="@string/title_activity_manage__attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Assignment"
            android:label="@string/title_activity_assignment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Performance"
            android:label="@string/title_activity_performance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Messages"
            android:label="@string/title_activity_messages"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Create_Assignment"
            android:label="@string/title_activity_create__assignment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Grade_Assignment"
            android:label="@string/title_activity_grade__assignment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.View_Conversation"
            android:label="@string/title_activity_view__conversation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Send_Notification"
            android:label="@string/title_activity_send__notification"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
