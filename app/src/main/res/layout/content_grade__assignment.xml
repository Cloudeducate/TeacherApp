<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cloudeducate.redtick.Activity.Grade_Assignment"
    tools:showIn="@layout/activity_grade__assignment">

    <android.support.v7.widget.CardView
        android:id="@+id/submitlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/md_white_1000"
            android:textStyle="normal"
            android:background="@drawable/item_top_bg"
            android:text="Submit"
            android:paddingBottom="@dimen/big_padding"
            android:paddingTop="@dimen/big_padding"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginLeft="@dimen/small_padding"
        android:text="List of Students"
        android:textStyle="bold"
        android:textColor="@color/md_blue_grey_300"
        android:textSize="15sp"
        android:layout_below="@+id/submitlayout"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvgradelist"
        android:layout_width="match_parent"
        android:layout_below="@id/up_tv"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/big_margin"/>

</RelativeLayout>
