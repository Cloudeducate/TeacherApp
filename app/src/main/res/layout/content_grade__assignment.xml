<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cloudeducate.redtick.Activity.Grade_Assignment"
    tools:showIn="@layout/activity_grade__assignment">

    <android.support.v7.widget.CardView
        android:id="@+id/submitlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        android:textStyle="normal"
        android:text="List of Students"
        android:id="@+id/list"
        />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvgradelist"
        android:layout_width="match_parent"
        android:layout_below="@id/submitlayout"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/big_margin"/>

</RelativeLayout>
