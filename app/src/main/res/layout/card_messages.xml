<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="?selectableItemBackground"
        android:padding="4dp"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/very_small_padding">

            <TextView
                android:id="@+id/conversation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:text="Conversation title"
                android:textStyle="bold"
                android:textColor="@color/md_blue_grey_900"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/view"
                style="@style/TimelineTopBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/conversation"
                android:layout_marginLeft="30dp"
                android:background="@drawable/item_bg"
                android:padding="@dimen/big_padding"
                android:text="View"
                android:layout_marginTop="5sp"
                android:textSize="15sp"
                android:textColor="@color/md_pink_500" />



        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>